<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/order_more_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/TextColorBlack"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="60dp">

        <LinearLayout
            android:id="@+id/picture_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/top_line"
                android:layout_width="1dp"
                android:layout_height="43dp"
                android:layout_gravity="center_horizontal"
                android:background="#12558C" />

            <ImageView
                android:id="@+id/circle_solid_blue"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:adjustViewBounds="true"
                android:maxHeight="14dp"
                android:src="@drawable/circle_solid_blue" />

            <View
                android:id="@+id/bot_line"
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="#12558C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_order"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="订单生成成功"
                android:textColor="@color/TextColorBlack"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号 : "
                    android:textColor="@color/TextColorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/order_more_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TextColorBlack"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

