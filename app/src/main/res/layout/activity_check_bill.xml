                android:layout_height="wrap_content"
                android:background="@color/gray_line_color" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_line_color" />
    </LinearLayout>

