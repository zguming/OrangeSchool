        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
